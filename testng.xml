<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Demo suite" verbose="1">
    <test name="Chrome Test">
        <parameter name="target-browser" value="chrome"/>
        <classes>
            <class name="tests.testng.BasicGoogleTests">
                <parameter name="search-query" value="Clarusway"/>
                <methods>
                    <exclude name="assertGoogleLogoExist"/>
                </methods>

            </class>
            <class name="tests.testng.softA"/>
        </classes>
    </test>

    <test name="Edge Test">
        <parameter name="target-browser" value="edge"/>
        <classes>
            <class name="tests.testng.BasicGoogleTests">
                <parameter name="search-query" value="Clarusway"/>
                <methods>
                    <exclude name="assertGoogleLogoExist"/>
                </methods>

            </class>
            <class name="tests.testng.softA"/>
        </classes>
    </test>

    <test name="Firefox Test">
        <parameter name="target-browser" value="firefox"/>
        <classes>
            <class name="tests.testng.BasicGoogleTests">
                <parameter name="search-query" value="Clarusway"/>
                <methods>
                    <exclude name="assertGoogleLogoExist"/>
                </methods>

            </class>
            <class name="tests.testng.softA"/>
        </classes>
    </test>
</suite>